<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="hu.petrik.filmdb.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox minHeight="30.0" prefHeight="30.0" spacing="10.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onHozzadasButtonClick" text="Hozááadás" />
         <Button mnemonicParsing="false" onAction="#onModositasButtonClick" text="Módosítás" />
         <Button mnemonicParsing="false" onAction="#onTorlesButtonClick" text="Törlés" />
      </children>
   </HBox>
   <TableView fx:id="filmTable" prefHeight="200.0" prefWidth="500.0">
     <columns>
       <TableColumn fx:id="colCim" minWidth="50.0" prefWidth="200.0" text="Cím" />
       <TableColumn fx:id="colKategoria" minWidth="50.0" prefWidth="150.0" text="Kategória" />
         <TableColumn fx:id="colHossz" minWidth="50.0" prefWidth="75.0" text="Hossz" />
         <TableColumn fx:id="colErtekeles" minWidth="50.0" prefWidth="75.0" text="Értékelés" />
     </columns>
   </TableView>
</VBox>
